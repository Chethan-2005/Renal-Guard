<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#EAF4FA" /> <!-- light blue/white shade -->

    <!-- Rounded corners -->
    <corners android:radius="10dp" />

    <!-- Optional stroke for border -->
    <stroke
        android:width="1dp"
        android:color="#D0DCE4" />

    <!-- Padding inside EditText -->
    <padding
        android:left="10dp"
        android:top="8dp"
        android:right="10dp"
        android:bottom="8dp" />
</shape>
