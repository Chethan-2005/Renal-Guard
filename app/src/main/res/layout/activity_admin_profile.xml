<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorPrimary"
        app:title="Admin Profile"
        app:titleTextColor="?attr/colorOnPrimary"
        app:navigationIcon="@drawable/ic_back"
        app:menu="@menu/menu_admin_profile" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topAppBar"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_profile"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                app:tint="?attr/colorPrimary" />

            <!-- Email -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_edittext_theme_aware"
                android:hint="E-Mail Address"
                android:enabled="false"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurface" />

            <!-- Change Password -->
            <EditText
                android:id="@+id/etChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_edittext_theme_aware"
                android:hint="Change Password"
                android:inputType="textPassword"
                android:padding="12dp" />

            <TextView
                android:id="@+id/tvPasswordHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password must be at least 8 characters, include 1 number and 1 special character"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"/>

            <!-- Re-Enter Password -->
            <EditText
                android:id="@+id/etReEnterPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_edittext_theme_aware"
                android:hint="Re-Enter Password"
                android:inputType="textPassword"
                android:padding="12dp" />

            <!-- Save Changes -->
            <Button
                android:id="@+id/btnSaveChanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="?attr/colorPrimary"
                android:text="Save Changes"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp" />

            <!-- Logout -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="?attr/colorPrimary"
                android:text="Logout"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
