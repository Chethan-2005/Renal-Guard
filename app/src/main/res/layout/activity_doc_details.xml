<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <!-- Top Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Doctor Details"
        app:titleTextColor="?attr/colorOnPrimary"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:navigationContentDescription="Back" />

    <!-- Doctor Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_card_theme_aware"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgDoctor"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_doctor"
            android:contentDescription="Doctor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/tvDoctorId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: DOC01"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface" />
        </LinearLayout>
    </LinearLayout>

    <!-- Section Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:text="About The Doctor"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface" />

    <!-- About Doctor Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_outline_theme_aware"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvDoctorEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: doctor@example.com"
            android:textSize="14sp"
            android:layout_marginBottom="6dp"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/tvDoctorPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: 9876543210"
            android:textSize="14sp"
            android:layout_marginBottom="6dp"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/tvDoctorSpecialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialization: Nephrologist"
            android:textSize="14sp"
            android:layout_marginBottom="6dp"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/tvDoctorEducation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education: MBBS, FRCS"
            android:textSize="14sp"
            android:layout_marginBottom="6dp"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/tvDoctorLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: Hyderabad, Telangana"
            android:textSize="14sp"
            android:layout_marginBottom="6dp"
            android:textColor="?attr/colorOnSurface" />
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Back to Home Button -->
    <Button
        android:id="@+id/btnBackToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_button_outline"
        android:text="Back To Homepage"
        android:textColor="?attr/colorPrimary" />
</LinearLayout>
