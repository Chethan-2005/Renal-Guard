<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Top AppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Patient Data"
        app:titleTextColor="?attr/colorOnPrimary"
        app:navigationIcon="@drawable/ic_back"
        app:navigationContentDescription="Back"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Patient Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/patient_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintTop_toBottomOf="@+id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_user"
                android:layout_alignParentStart="true"
                app:tint="?attr/colorPrimary" />

            <TextView
                android:id="@+id/patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jude"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_toEndOf="@id/user_icon"
                android:layout_marginStart="12dp" />

            <!-- ✅ Added Email just below name -->
            <TextView
                android:id="@+id/patient_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jude@email.com"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_below="@id/patient_name"
                android:layout_toEndOf="@id/user_icon"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp" />

            <!-- ✅ Edit icon restored -->
            <ImageView
                android:id="@+id/edit_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_edit"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:tint="?attr/colorPrimary" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Buttons Section -->
    <LinearLayout
        android:id="@+id/button_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/patient_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_patient_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Details"
            android:layout_marginBottom="12dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary" />

        <Button
            android:id="@+id/btn_score_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score Results"
            android:layout_marginBottom="12dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary" />

        <Button
            android:id="@+id/btn_assessment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assessment"
            android:layout_marginBottom="12dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary" />

    </LinearLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>
