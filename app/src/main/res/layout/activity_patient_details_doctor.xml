<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"> <!-- Changed to theme-aware background -->

    <!-- Top Bar - MaterialToolbar for consistency -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Patient Details"
        app:titleTextColor="?attr/colorOnPrimary"
        app:navigationIcon="@drawable/ic_back"
        app:navigationContentDescription="Back">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_home"
            app:tint="?attr/colorOnPrimary"
            android:contentDescription="Home" />

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Name -->
            <TextView
                style="@style/FormLabel"
                android:text="Name" />
            <EditText
                style="@style/FormInput"
                android:id="@+id/etName"
                android:hint="Enter full name"
                android:textColorHint="?attr/colorOnSurface" /> <!-- Changed to theme-aware hint color -->

            <!-- Age & Gender -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/FormLabel"
                        android:text="Age" />
                    <EditText
                        style="@style/FormInput"
                        android:id="@+id/etAge"
                        android:hint="Age"
                        android:textColorHint="?attr/colorOnSurface" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        style="@style/FormLabel"
                        android:text="Gender" />
                    <EditText
                        style="@style/FormInput"
                        android:id="@+id/etGender"
                        android:hint="Gender"
                        android:textColorHint="?attr/colorOnSurface" />
                </LinearLayout>
            </LinearLayout>

            <!-- Email -->
            <TextView
                style="@style/FormLabel"
                android:text="E-mail Id" />
            <EditText
                style="@style/FormInput"
                android:id="@+id/etEmail"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:textColorHint="?attr/colorOnSurface" />

            <!-- Mobile -->
            <TextView
                style="@style/FormLabel"
                android:text="Mobile Number" />
            <EditText
                style="@style/FormInput"
                android:id="@+id/etMobile"
                android:hint="Mobile number"
                android:inputType="phone"
                android:textColorHint="?attr/colorOnSurface" />

            <!-- Patient ID -->
            <TextView
                style="@style/FormLabel"
                android:text="Patient ID" />
            <EditText
                style="@style/FormInput"
                android:id="@+id/etPatientId"
                android:hint="Enter patient ID"
                android:textColorHint="?attr/colorOnSurface" />

        </LinearLayout>
    </ScrollView>

    <!-- Floating Save Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp"
        android:backgroundTint="?attr/colorPrimary" /> <!-- Changed to theme-aware background tint -->
    </LinearLayout>

</LinearLayout>
