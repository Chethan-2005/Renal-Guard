<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootAssessment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"> <!-- Changed to theme-aware background -->

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Patient Assessment"
        app:titleTextColor="?attr/colorOnPrimary"
        app:navigationIcon="@drawable/ic_back"
        app:navigationContentDescription="Back" />

    <!-- Scrollable content above the fixed calculate button -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topAppBar"
        android:layout_above="@+id/btnCalculate"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 1. Comorbidities -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface"> <!-- Changed to theme-aware background -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Comorbidities (0-6 points)"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" /> <!-- Changed to theme-aware text color -->

                    <CheckBox
                        android:id="@+id/diabetesCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diabetes (1 point)"
                        android:textColor="?attr/colorOnSurface" />
                    <CheckBox
                        android:id="@+id/hypertensionCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hypertension (1 point)"
                        android:textColor="?attr/colorOnSurface" />
                    <CheckBox
                        android:id="@+id/cancerCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancer (1 point)"
                        android:textColor="?attr/colorOnSurface" />
                    <CheckBox
                        android:id="@+id/smokerCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smoker (1 point)"
                        android:textColor="?attr/colorOnSurface" />
                    <CheckBox
                        android:id="@+id/alcoholCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alcoholic (1 point)"
                        android:textColor="?attr/colorOnSurface" />
                    <CheckBox
                        android:id="@+id/otherDiseaseCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Any other disease (1 point)"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 2. Age -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. Age (0-2 points)"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <RadioGroup
                        android:id="@+id/ageRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/ageAbove55"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Above 55 years (2 points)"
                            android:textColor="?attr/colorOnSurface" />

                        <RadioButton
                            android:id="@+id/ageBelow55"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Below 55 years (0 points)"
                            android:textColor="?attr/colorOnSurface" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3. Multiple attempts -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3. Multiple attempts for line insertion (0-1 point)"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <RadioGroup
                        android:id="@+id/attemptsRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/attemptsYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes (1 point)"
                            android:textColor="?attr/colorOnSurface" />

                        <RadioButton
                            android:id="@+id/attemptsNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No (0 points)"
                            android:textColor="?attr/colorOnSurface" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 4. Duration of line -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4. Duration of line (1-3 points)"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <RadioGroup
                        android:id="@+id/durationRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/week1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 week (1 point)"
                            android:textColor="?attr/colorOnSurface" />

                        <RadioButton
                            android:id="@+id/week2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 weeks (2 points)"
                            android:textColor="?attr/colorOnSurface" />

                        <RadioButton
                            android:id="@+id/week3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 weeks (3 points)"
                            android:textColor="?attr/colorOnSurface" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 5. Healthcare Setup -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5. Healthcare Setup (1-2 points)"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <RadioGroup
                        android:id="@+id/setupRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/privateSetup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Private setup with an aseptic environment (1 point)"
                            android:textColor="?attr/colorOnSurface" />

                        <RadioButton
                            android:id="@+id/govtSetup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Government hospital (2 points)"
                            android:textColor="?attr/colorOnSurface" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 6. Skin Integrity -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6. Skin Integrity (0-1 point)"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <RadioGroup
                        android:id="@+id/skinRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/skinInfected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Any dermatitis/infection at the site (1 point)"
                            android:textColor="?attr/colorOnSurface" />

                        <RadioButton
                            android:id="@+id/skinNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Normal skin (0 points)"
                            android:textColor="?attr/colorOnSurface" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 7. Line Placement -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7. Line Placement by (0-1 point)"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <RadioGroup
                        android:id="@+id/placementRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/doctorPlacement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doctor (0 points)"
                            android:textColor="?attr/colorOnSurface" />

                        <RadioButton
                            android:id="@+id/staffPlacement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paramedical staff (1 point)"
                            android:textColor="?attr/colorOnSurface" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 8. Dialysis Frequency -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8. Dialysis Frequency (1-3 points)"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <RadioGroup
                        android:id="@+id/dialysisRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/less3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Less than 3 sessions/week (1 point)"
                            android:textColor="?attr/colorOnSurface" />

                        <RadioButton
                            android:id="@+id/less6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Less than 6 sessions/week (2 points)"
                            android:textColor="?attr/colorOnSurface" />

                        <RadioButton
                            android:id="@+id/less9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Less than 9 sessions/week (3 points)"
                            android:textColor="?attr/colorOnSurface" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 9. Chronic Steroid Use -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9. Chronic Steroid/Immunosuppressive Drugs (0-2 points)"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <RadioGroup
                        android:id="@+id/steroidRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/steroidYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes (2 points)"
                            android:textColor="?attr/colorOnSurface" />

                        <RadioButton
                            android:id="@+id/steroidNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No (0 points)"
                            android:textColor="?attr/colorOnSurface" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 10. Previous Antibiotics -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10. Previous Antibiotic Use (0-1 point)"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <RadioGroup
                        android:id="@+id/antibioticRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/antibioticYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes (1 point)"
                            android:textColor="?attr/colorOnSurface" />

                        <RadioButton
                            android:id="@+id/antibioticNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No (0 points)"
                            android:textColor="?attr/colorOnSurface" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 11. Post-Line Symptoms -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11. Post-Line Symptoms (0-2 points)"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <RadioGroup
                        android:id="@+id/symptomsRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/symptomYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fever, swelling, pain, or discharge after line placement (2 points)"
                            android:textColor="?attr/colorOnSurface" />

                        <RadioButton
                            android:id="@+id/symptomNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No symptoms (0 points)"
                            android:textColor="?attr/colorOnSurface" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 12. Stage of AKI/CKD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12. Stage of AKI/CKD (0-1 point)"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface" />

                    <RadioGroup
                        android:id="@+id/stageRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/akiStage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AKI (0 points)"
                            android:textColor="?attr/colorOnSurface" />

                        <RadioButton
                            android:id="@+id/ckdStage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CKD (1 point)"
                            android:textColor="?attr/colorOnSurface" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- spacing at bottom so content isn't hidden behind button -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Fixed calculate button -->
    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp" />
</RelativeLayout>
