<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true">

<LinearLayout
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="24dp"
android:gravity="center_horizontal">

<!-- App Logo -->
<ImageView
    android:id="@+id/imgLogo"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/logo_renal_guard"
    android:layout_marginTop="40dp"
    android:contentDescription="Renal Guard Logo" />

<!-- Login Title -->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Login"
    android:textColor="?attr/colorPrimary"
    android:textStyle="bold"
    android:textSize="26sp"
    android:layout_marginTop="20dp" />

<!-- Signup Link -->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? "
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/textSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>

<!-- Doctor ID Input -->
    <EditText
        android:id="@+id/editTextDoctorId"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:ellipsize="end"
        android:singleLine="true"
        android:scrollHorizontally="false"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="8dp"
        android:background="@drawable/rounded_input_theme_aware"
        android:padding="12dp"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurface" />


<!-- Password Input -->
<EditText
    android:id="@+id/editTextPassword"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="16dp"
    android:hint="Password"
    android:inputType="textPassword"
    android:drawableStart="@drawable/ic_key"
    android:drawablePadding="8dp"
    android:background="@drawable/rounded_input_theme_aware"
    android:padding="12dp"
    android:textColor="?attr/colorOnSurface"
    android:textColorHint="?attr/colorOnSurface" />

<RadioGroup
    android:id="@+id/roleRadioGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="16dp"
    android:gravity="center">

    <RadioButton
        android:id="@+id/radioDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor"
        android:textColor="?attr/colorPrimary"
        android:buttonTint="?attr/colorPrimary"
        android:textSize="16sp" />

    <RadioButton
        android:id="@+id/radioPatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient"
        android:textColor="?attr/colorPrimary"
        android:buttonTint="?attr/colorPrimary"
        android:textSize="16sp"
        android:layout_marginStart="10dp" />

    <RadioButton
        android:id="@+id/radioAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textColor="?attr/colorPrimary"
        android:buttonTint="?attr/colorPrimary"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp" />

</RadioGroup>


<!-- Login Button -->
<Button
    android:id="@+id/buttonLogin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Login"
    android:textColor="?attr/colorOnPrimary"
    android:layout_marginTop="20dp"
    android:backgroundTint="?attr/colorPrimary" />

</LinearLayout>
    </ScrollView>
